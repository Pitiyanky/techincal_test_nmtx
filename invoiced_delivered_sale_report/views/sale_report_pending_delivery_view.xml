<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sale_report_pending_delivery_tree" model="ir.ui.view">
            <field name="name">sale.report.pending.delivery.tree</field>
            <field name="model">sale.report.pending.delivery</field>
            <field name="arch" type="xml">
                <tree string="Reporte de Espera por Despachar">
                    <field name="product_id"/>
                    <field name="partner_id"/>
                    <field name="order_id"/>
                    <field name="invoice_id"/>
                    <field name="invoice_date"/>
                    <field name="invoiced_qty"/>
                </tree>
            </field>
        </record>

        <record id="action_sale_report_pending_delivery" model="ir.actions.act_window">
            <field name="name">Reporte de espera por despachar</field>
            <field name="res_model">sale.report.pending.delivery</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem
            id="menu_sale_report_pending_delivery"
            name="Reporte de espera por despachar"
            parent="sale.menu_sale_report"
            action="action_sale_report_pending_delivery"
            sequence="20"/>
    </data>
</odoo>